{{define "contentmainbody"}}
    <script>
        const tipIds = [
            {{range $name, $v := .ContentData}}
            "{{$name.Title}}",
            {{end}}
        ]
    </script>
    <div style="display: flex; flex-direction: column; overflow-y: auto">
        <div style="display: flex">
            <select onchange="handleTipsButtonSelect(this)">
                {{range $name, $v := .ContentData}}
                    <option>{{$name.Title}}</option>
                {{end}}
            </select>

            <button onclick="handleContentMaximizeButtonClick(false)" style="margin-left: auto"></button>
        </div>
        {{range $name, $data := .ContentData}}
            <ul id="{{$name.Title}}" style="overflow-y: scroll; flex: 1" {{if not (eq $name.GameModeName .GameModeName)}}hidden{{end}}>
                {{range $data}}
                    <li>
                        <p>
                            {{.Title}}: {{.Message}}
                        </p>
                    </li>
                {{end}}
            </ul>
        {{end}}
    </div>
{{end}}